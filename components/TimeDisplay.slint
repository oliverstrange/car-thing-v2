export component TimeDisplay inherits Text {
    in property <int> seconds: 0;
    property <bool> blinking: false;
    callback start_stop_blinking();
    start_stop_blinking => {
        if (seconds > 0) {
            blinking = !blinking;
        }
        if (!blinking) {
            self.color = #ffffff;
        }
    }
    color: #ffffff;
    font-size: 50px;
    text: {
        (floor(seconds / 60) < 10 ? "0" : "") + floor(seconds / 60) + ":" + (Math.mod(seconds, 60) < 10 ? "0" : "") + Math.mod(seconds, 60);
    }
    animate color {
        duration: 100ms;
        easing: ease-in-out;
    }
    blinking_timer := Timer {
        interval: 400ms;
        running: blinking;
        triggered() => {
            if (parent.color == #ffffff) {
                parent.color = #ffffff78;
            } else {
                parent.color = #ffffff;
            }
        }
    }
}
