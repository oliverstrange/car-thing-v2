import { VerticalBox } from "std-widgets.slint";
import { TimeDisplay } from "../components/TimeDisplay.slint";

export component LapTimer {
    width: 240px;
    height: 240px;

    property <int> seconds: 0;

    timer := Timer {
        interval: 1s;
        running: true;
        triggered() => {
            seconds += 1;
        }
    }

    VerticalBox {
        alignment: center;
        padding: 0px;

        Rectangle {
            clip: false;
            height: 50px;
            background: #6771ff;
            TimeDisplay {
                seconds: seconds;
            }
        }
    }
}